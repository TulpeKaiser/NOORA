<div class="main-container">
  <div class="sidebar-container"></div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 h2">
        <h2> Discover our selection: </h2>
      </div>
    </div>

    <div class="row">
      <% @apps.each do |app| %>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <%= link_to app_path(app) do %>
            <div class="app-card">
              <% if app.app_screens.first.present? && !app.app_screens.first.url.nil? %>
                <div class="app-card-image" style="background-image: url('<%= app.app_screens.first.url %>')">    </div>
              <% else %>
                <div class="app-card-image" style="background-image: url('<%= app.logo %>')"></div>
              <% end %>
              <div class="app-card-content">
                <div class="app-card-title">
                  <h4><%= app.name %></h4>
                </div>
                <div class="app-card__category-tags-container">
                  <p class="app-card__category"><i class="fas fa-tag"></i> <%= app.category.name %></p>
                </div>
                <div class="app-card-description">
                  <p class="short-description"> <%= app.description[0..100] %>...<b>More info</b></p>
                </div>
              </div>
              <div class="icons-container">
                <%= link_to app_bookmarks_path(app), method: "post", remote:true, class: "bookmarks-icon" do %>
                  <i class="far fa-star"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
