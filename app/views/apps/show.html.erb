<div class="main-container">
  <div class="sidebar-container"></div>
  <div class="app-show__wrapper">
    <div class="container">
      <div class="row app-show__main-container">

        <div class="col-xs-4">
          <div class="app-show__side">
            <div class="app-show__logo-wrap app-show__logo" style="background-image: url('<%= @app.logo_url %>');">
            </div>
              <%= link_to app_bookmarks_path(@app), method: "post", class: "button app-show__button" do %>
                Add to favorite
              <% end %>
              <%= link_to "More Information", @app.webpage_url, class: "button button-grey app-show__button", target: "_blank" %>
          </div>
        </div>

        <div class="col-xs-8 ">
          <div class="app-show__main">

            <h1 class="app-show__heading"><%= @app.name %></h1>

            <p class="app-show__category">Category:  <%= @app.category&.name %></p>

            <p class="app-show__price">
              Price:
              <%= link_to "Free", "#", class: "app-show__price-link" %>
            </p>

            <p class="app-show__description"><%= @app.description %></p>

            <%= cl_image_tag @app.app_screens.first.url, class: "app-show__image", style: "height: 600px;" %>

            <%= simple_form_for [@app, @review] do |f| %>
              <% if @review.errors.any? %>
                <div class="errors-container">
                  <ul>
                    <% @review.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <p>Rating</p>
              <%= f.input :rating, label: false, placeholder: "rating" %>
              <p>Description</p>
              <%= f.input :content, label: false, placeholder: "write your review..."  %>
              <%= f.submit "Post your review", class: "button review__button"  %>
            <% end %>
            <% if @reviews %>
              <% @reviews.each do |review| %>
                <%= render 'shared/review', review: review %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
