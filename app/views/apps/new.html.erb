<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 form">
      <h2 class="h2">Submit a new app</h2>

      <%= simple_form_for(@new_app) do |f| %>

        <div class="form-inputs">
          <%= f.input :name,
                      required: true,
                      placeholder: "name of the app",
                      label: false %>

          <%= f.input :webpage_url,
                      required: true,
                      placeholder: "url of the app",
                      label: false %>
          <%= f.input :description,
                      required: false,
                      placeholder: "add a description",
                      label: false %>


         <%= f.input :logo,
                      label: false %>
          <label for="file-upload" class="custom-file-upload">
              <i class="fa fa-cloud-upload"></i> upload logo
          </label>
          <input id="file-upload" type="file"/>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Submit", class: "form-button button"%>
      <% end %>
    </div>
  </div>
</div>
