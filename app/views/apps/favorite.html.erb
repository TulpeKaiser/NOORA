<div class="main-container">
  <div class="sidebar-container"></div>
  <div class="container">
    <div class="row">
      <div class="col-12 titre">
        <h2>You're favorite apps</h2>
      </div>
    </div>

    <div class="row">
      <!-- Favorite apps -->
      <% @apps.each do |app| %>
        <div class="col-xs-6 col-sm-4 col-md-2">
          <%= link_to app.webpage_url do %>
            <!-- boite principale -->
            <div class="app-card__fav">
              <!-- background box -->
              <div class="app-card__visible" style="background-image: url('<%= app.logo %>')">
                <!-- hovered part -->
              </div>
              <div class="app-card__hidden">
                <%= link_to "Remove", bookmark_path(current_user.bookmarks.where(app: app)[0]), class: "little-button left", method: "delete" %>
                <%= link_to "Infos",app_path(app), class: "little-button right" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
