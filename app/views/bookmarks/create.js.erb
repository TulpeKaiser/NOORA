function addAlert() {
  const addBox = document.querySelector(".bookmark-alert");
  addBox.classList.add("bookmark-alert-display");
  addBox.classList.remove("alert-info");
  addBox.classList.remove("alert-warning");
  if ('<%= @message %>' == "Application has been added to your favorites.") {
    addBox.classList.add("alert-info");
  } else {
    addBox.classList.add("alert-warning");
  };
  addBox.innerHTML = '<%= @message %>';
};

function removeAlert() {
  const addBox = document.querySelector(".bookmark-alert");
  addBox.classList.remove("bookmark-alert-display");
}

function checkUser() {
  if (<%= @user_logged_in %> === false) {
    window.location.replace("<%= new_user_session_path %>");
  } else {
    addAlert()
  }
}

function bookmark() {
  const currentIcon = document.querySelector("#js-bookmark-hook-<%= @app.id %> .icons-container i");
  currentIcon.classList.toggle("far")
  currentIcon.classList.toggle("fas")
}


checkUser();
bookmark();
setTimeout(removeAlert, 1500);
